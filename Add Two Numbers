class Solution {
    public ListNode addTwoNumbers(ListNode l1, ListNode l2) {
       int carry = 0;
       ListNode ll = new ListNode(0);
       ListNode temp = ll;
       while(l1!=null || l2!=null || carry!=0)
       {
            int sum = carry;
            if(l1!=null)
            {
                sum+=l1.val;
                l1=l1.next;
            }
            if(l2!=null)
            {
                sum+=l2.val;
                l2=l2.next;
            }
            // sum is 15, carry would be 1.
            carry = sum/10;
            // sum is 15, 15%10 is 5.
            sum%=10;
            temp.next = new ListNode(sum);
            temp=temp.next;
       }

       return ll.next;
    }
}
